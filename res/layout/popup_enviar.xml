<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="10dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:id="@+id/tituloEnviar" />
	<AutoCompleteTextView android:id="@+id/listaEnviar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"></AutoCompleteTextView>
	<Button android:text="Enviar" android:id="@+id/button1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="right"></Button>

</LinearLayout>