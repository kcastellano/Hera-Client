<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="top"
	android:background="@drawable/main_background" android:layout_height="wrap_content"
	android:layout_width="wrap_content">

	<LinearLayout android:layout_height="10dp"
		android:layout_width="fill_parent" android:background="@drawable/nav_shadow" />
	<RelativeLayout android:layout_width="fill_parent"
		android:background="@drawable/list_header_background"
		android:layout_height="wrap_content" android:layout_marginTop="10dp"
		android:layout_marginRight="10dp" android:layout_marginLeft="10dp">
		<TextView android:textColor="@color/white" android:id="@+id/textHeader"
			android:text="Mediciones del primer trimestre" android:textSize="20dp"
			android:textStyle="bold" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"></TextView>
	</RelativeLayout>
	<ScrollView android:layout_width="fill_parent"
		android:background="@drawable/list_background" android:layout_height="fill_parent"
		android:layout_marginTop="53dp" android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp" android:layout_marginBottom="70dp">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:gravity="top"
			android:layout_height="fill_parent">
			<TextView android:text="Forma saco gestacional" android:id="@+id/textView3"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000" android:layout_marginTop="10dp"></TextView>
			<Spinner android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/forma"></Spinner>
			<TextView android:text="Ubicacion saco gestacional"
				android:id="@+id/textView4" android:layout_width="wrap_content"
				android:textColor="#000000" android:layout_height="wrap_content"></TextView>
			<Spinner android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/ubicacion"></Spinner>
			<TextView android:text="Bordes saco gestacional" android:id="@+id/textView4"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<Spinner android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/bordes"></Spinner>
			<TextView android:text="Diametro medio saco gestacional"
				android:id="@+id/textView4" android:layout_width="wrap_content"
				android:textColor="#000000" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/diametro"></EditText>
			<TextView android:text="Vesicula Vitelina" android:id="@+id/textView3"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000" android:layout_marginTop="5dp"></TextView>
			<Spinner android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/presencia"></Spinner>
			<TextView android:text="Embrion visible" android:id="@+id/textView3"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000"></TextView>
			<Spinner android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/visible"></Spinner>
			<TextView android:text="Actividad cardiaca" android:id="@+id/textView1"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<Spinner android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/actividad"></Spinner>
			<TextView android:text="Traslucencia Nucal" android:id="@+id/textView2"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<EditText android:text="" android:layout_height="wrap_content"
				android:id="@+id/traslucencia" android:layout_width="match_parent"></EditText>
			<TextView android:text="Ductus Venoso" android:id="@+id/textView4"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<Spinner android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/ductus"></Spinner>
			<TextView android:text="Angulo Facial" android:id="@+id/textView5"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<EditText android:text="" android:layout_height="wrap_content"
				android:id="@+id/angulo" android:layout_width="match_parent"></EditText>
			<TextView android:text="Hueso Nasal" android:id="@+id/textView6"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<Spinner android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/hueso"></Spinner>
			<TextView android:text="R.Tricuspidea" android:id="@+id/textView7"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<Spinner android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/tricuspidea"></Spinner>
			<TextView android:text="Longitud Craneo Caudal" android:id="@+id/textView8"
				android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<EditText android:text="" android:layout_height="wrap_content"
				android:id="@+id/longitud" android:layout_width="match_parent"></EditText>
			<Button android:text="Enviar datos" android:id="@+id/enviar_datos_primer"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_gravity="center" android:layout_marginTop="5dp">
			</Button>
		</LinearLayout>
	</ScrollView>


	<LinearLayout android:id="@+id/footer1"
		android:background="@drawable/borders" android:layout_height="60dp"
		android:layout_width="fill_parent" android:layout_alignParentBottom="true">

	</LinearLayout>

</RelativeLayout>
